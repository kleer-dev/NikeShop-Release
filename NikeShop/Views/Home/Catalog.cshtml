<link href="/css/catalog.css" rel="stylesheet" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,500;0,600;1,500&display=swap" rel="stylesheet">



<div class="cont-page">
    @{
        foreach (var item in ApplicationContext.db.Nikes.ToList())
        {
            <div class="catalog">
                <div class="sneakers">
                    <div class="nike-img">
                        <img src="@item.Path" alt="none" class="image" />
                    </div>

                    <div class="text">
                        <div class="nike-name">
                            <label class="nike">
                                @item.Name
                            </label>
                            <label class="nike2">
                                @item.Name2
                            </label>
                        </div>

                        <div class="nike-desc">
                            <label class="description">
                                @item.Description
                            </label>
                        </div>
                    </div>

                    <div class="line-center">
                        <hr class="line" />
                    </div>

                    <div class="price">
                        <div class="price-count">
                            <label>@item.Price $</label>
                        </div>
                        <div class="price-btn">
                            <a asp-controller="AddtoCart" asp-action="Order" asp-route-id="@item.ID" 
                               class="button">Add to Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

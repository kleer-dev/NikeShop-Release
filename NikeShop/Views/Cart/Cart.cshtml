<link href="~/css/cart.css" rel="stylesheet" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,500;0,600;1,500&display=swap" rel="stylesheet">

<div class="label-place">
    <div class="pagename">
        Cart
    </div>
</div>
<div class="cont-page">
    
    
    @{ foreach (var item in Model)
        {
            <div class="catalog">
                <div class="sneakers">
                    <div class="nike-img">
                            <img src="@item.Path" alt="none" class="image" />
                    </div>

                    <div class="text">
                        <div class="nike-name">
                            <label class="nike">
                                @item.Name
                            </label>
                            
                        </div>

                        <div class="nike-desc">
                            <label class="description">
                                @item.Description
                            </label>
                        </div>

                        <div class="params">Size: @item.Size</div>
                        <div class="params">Sending country: @item.Country </div>

                    </div>

                    <div class="line-center">
                        <hr class="line" />
                    </div>

                    <div class="price">
                       
                        <div class="price-btn">
                            <form asp-controller="Cart" asp-action="PurchaseDb"
                                  asp-route-id="@item.ID" method="post">
                                <input asp-controller="Cart" asp-action="PurchaseDb"
                                  asp-route-id="@item.ID" class="button" type="submit" name="name" value="Buy" />
                            </form>
                        </div>
                 
                        <div class="price-count">
                            <label>@item.Price $</label>
                        </div>
                        <form asp-controller="Cart" asp-action="Remove" asp-route-id="@item.ID" method="post">
                            <div class="btn-remove">
                                <input asp-action="Remove" asp-controller="Cart" asp-route-id="@item.ID" class="trash" type="image" src="~/Pictures/svg/trash.svg" name="name" value="~/Pictures/svg/trash.svg" />

                            </div>
                        </form>
                        
                       <form asp-controller="Edit" asp-action="Edit" asp-route-price="@item.Price" method="post">
                           <input class="button" asp-route-price="@item.Price"  asp-route-name="@item.Name"
                                  asp-route-desc="@item.Description" asp-route-path="@item.Path"
                                  asp-action="Edit" asp-controller="Edit"  asp-route-ident="@item.ID"
                                  type="submit" value="Edit">
                       </form>
                        
                    </div>
                </div>
            </div> 
        } }
</div>
